<!-- indent:2
 Because XML as a layout language required deep nesting.
-->

<GuiXml>
  <Controls>
    <!-- writ list window ------------------------------------------------ -->
    <TopLevelControl name="WritWorthyUI"
      hidden="true"
      movable="true"
      mouseEnabled="true"
      resizeHandleSize="2"
      allowBringToTop="true"
      clampedToScreen="false"
      >
      <Dimensions              x="1125"      y="550" />
      <DimensionConstraints minX="1105"   minY="350"
                            maxX="1805"   maxY="950" />

            <!-- Positive LT/Negative RB offsets allow sliding
               past edge of screen. Negative LT/Positive RB
               offsets inset from edge of screen.
               Neither affect resize. Grr.
             -->
      <ClampedToScreenInsets left="-20" top="-20" right="20" bottom="20" />

      <!-- React to window move/resize -->
      <OnMoveStop>WritWorthyUI_OnMoveStop()</OnMoveStop>
      <OnResizeStop>WritWorthyUI_OnResizeStop()</OnResizeStop>

      <Controls>
        <Backdrop name="$(parent)BG"
        inherits="ZO_DefaultBackdrop"
        />
        <Label  name="$(parent)WindowTitle"
          text="WritWorthy"
          font="ZoFontWindowTitle"
          color="CFDCBD"
          wrapMode="ELLIPSIS"
          verticalAlignment="TOP">
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="5"
            offsetY="5" />
        </Label>

        <Button name="$(parent)Close"
          alpha="1">
          <Textures
            normal="EsoUI/Art/Buttons/closeButton_up.dds"
            pressed="EsoUI/Art/Buttons/closeButton_down.dds"
            mouseOver="EsoUI/Art/Buttons/closeButton_mouseOver.dds"
            disabled="EsoUI/Art/Buttons/closeButton_disabled.dds"
            />
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPRIGHT"
            point="TOPRIGHT"
            offsetX="0"
            offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
            left="0"      top="0"
            right="0.625" bottom="0.625"
            />
          <OnClicked>
            WritWorthyUI_ToggleUI()
          </OnClicked>
        </Button>

        <Button name="$(parent)Refresh"
          alpha="1">
          <Textures
            normal="EsoUI/Art/Help/help_tabicon_feedback_up.dds"
            pressed="EsoUI/Art/Help/help_tabicon_feedback_down.dds"
            mouseOver="EsoUI/Art/Help/help_tabicon_feedback_over.dds"
            disabled="EsoUI/Art/Help/help_tabicon_feedback_disabled.dds"
            />
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPRIGHT"
            point="TOPRIGHT"
            offsetX="-30"
            offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
            left="0.1"     top="0.1"
            right="0.9" bottom="0.9"
            />
          <OnClicked>
            WritWorthyUI_RefreshUI()
          </OnClicked>
        </Button>

        <Button   name="$(parent)SortByStation"
          inherits="ZO_DefaultButton"
          text="Sort by Station"
          >
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPRIGHT"
            point="TOPRIGHT"
            offsetX="0"
            offsetY="35" />
          <Dimensions x="200" y="25" />
          <OnClicked>
            WritWorthyInventoryList_SortByStation()
          </OnClicked>
        </Button>

        <Control name="$(parent)MaxGPV" >
          <Dimensions width="200"/>
          <Anchor point="RIGHT"
            relativeTo="$(parent)SortByStation"
            relativePoint="LEFT"
            offsetX="-100"
            offsetY="0" />
          <Controls>
            <Backdrop name="$(parent)Backdrop" tier="HIGH" inherits="ZO_EditBackdrop">
              <Dimensions x="50"/>
              <Anchor point="LEFT"
                relativeTo="$(parent)"
                relativePoint="RIGHT"
                offsetX="0" />
              <Controls>
                <EditBox name="WritWorthyUIMaxGPVEdit"
                  inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText"
                  textType="NUMERIC_UNSIGNED_INT"
                  maxInputCharacters="4">

                  <OnInitialized>
                    ZO_EditDefaultText_Initialize(self, "")
                  </OnInitialized>
                  <OnTextChanged>
                    WritWorthyUI_MaxGPV_TextChanged(self:GetText())
                  </OnTextChanged>
                </EditBox>
              </Controls>
            </Backdrop>

            <Label name="WritWorthyUIMaxGPVLabel"
              text="Max gold per voucher:"
              color="FFFFFF"
              font="ZoFontGameLargeBold">
              <Anchor point="RIGHT"
                relativeTo="$(parent)Backdrop"
                relativePoint="LEFT"
                offsetX="-10" />
            </Label>
          </Controls>
        </Control>
                          <!-- WritWorthyUIInventoryList -->
        <Control name="$(parent)InventoryList"
          inheritAlpha="true"
          >
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="5"
            offsetY="85" />
          <Anchor relativeTo="$(parent)"
            relativePoint="BOTTOMRIGHT"
            point="BOTTOMRIGHT"
            offsetX="0"
            offsetY="-105" />
          <!-- Pointless to set dimensions when the two anchors
               completely and dynamically define our size
          <Dimensions x="990" y="700" />
          -->
          <Controls>
                                      <!-- WritWorthyUIInventoryListHeaders -->
            <Control name="$(parent)Headers">
              <Anchor relativeTo="$(parent)"
                relativePoint="TOPLEFT"
                point="TOPLEFT" />
              <Anchor relativeTo="$(parent)"
                relativePoint="TOPRIGHT"
                point="TOPRIGHT" />
              <Dimensions y="20" />
              <Controls>
                <Control name="$(parent)Type"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPLEFT"
                    point="TOPLEFT"
                    offsetX="0" />
                  <Dimensions x="100" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Type", "Type", "ui_type")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)VoucherCt"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPLEFT"
                    point="TOPLEFT"
                    offsetX="105" />
                  <Dimensions x="50" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "VoucherCt", "V", "ui_voucher_ct")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail1"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPLEFT"
                    point="TOPLEFT"
                    offsetX="160" />
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-645" />
                  <Dimensions x="300" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Detail1", "Detail 1", "ui_detail1")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail2"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-540" />
                  <Dimensions x="200" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Detail2", "Detail 2", "ui_detail2")
                  </OnInitialized>
                </Control>

                <!-- mimic stones go here right before motif column -->
                <Control name="$(parent)Mimic"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-455" />
                  <Dimensions x="30" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Mimic", "M", "ui_use_mimic")
                  </OnInitialized>
                </Control>

                <Control name="$(parent)Detail3"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-305" />
                  <Dimensions x="150" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Detail3", "Detail 3", "ui_detail3")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail4"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-150" />
                  <Dimensions x="150" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Detail4", "Detail 4", "ui_detail4")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Detail5"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-45" />
                  <Dimensions x="100" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Detail5", "Quality", "ui_detail5")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)Enqueue"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-10" />
                  <Dimensions x="30" y="20" />
                  <OnInitialized>
                    WritWorthyInventoryList_HeaderInit(self, "Enqueue", "Q", "ui_is_queued")
                  </OnInitialized>
                </Control>
              </Controls>
            </Control>                            <!-- InventoryListHeaders -->

                                                  <!-- InventoryList itself -->
            <Control name="$(parent)List"
              inherits="ZO_ScrollList">
              <Anchor point="TOPLEFT"
                relativeTo="$(parent)Headers"
                relativePoint="BOTTOMLEFT"
                offsetY="10"
                />
              <Anchor point="BOTTOMRIGHT"
                relativeTo="$(parent)"
                relativePoint="BOTTOMRIGHT"
                />
            </Control>
          </Controls>
        </Control>

        <Label  name="$(parent)InventoryListTitle"
          text="Writ Inventory"
          font="ZoFontGame"
          color="FFFFFF"
          >
          <Anchor relativeTo="$(parent)InventoryList"
            relativePoint="TOPLEFT"
            point="BOTTOMLEFT"
            offsetX="0"
            offsetY="-10" />
          <Dimensions x="500" y="20" />
        </Label>

                                     <!-- Enqueue All / Dequeue All buttons -->
        <Button   name="$(parent)EnqueueAll"
          inherits="ZO_DefaultButton"
          text="Enqueue All"
          >
          <Anchor relativeTo="$(parent)InventoryList"
            relativePoint="BOTTOMRIGHT"
            point="TOPRIGHT"
            offsetX="0"
            offsetY="5" />
          <Dimensions x="200" y="25" />
          <OnClicked>
            WritWorthyInventoryList_EnqueueAll()
          </OnClicked>
        </Button>

        <Button   name="$(parent)DequeueAll"
          inherits="ZO_DefaultButton"
          text="Dequeue All"
          >
          <Anchor relativeTo="$(parent)InventoryList"
            relativePoint="BOTTOMRIGHT"
            point="TOPRIGHT"
            offsetX="0"
            offsetY="35" />
          <Dimensions x="200" y="25" />
          <OnClicked>
            WritWorthyInventoryList_DequeueAll()
          </OnClicked>
        </Button>

      </Controls>
    </TopLevelControl>

    <Backdrop   name="WritWorthyAGSEditBox"
        inherits="ZO_EditBackdrop"
        virtual="true">
      <Dimensions x="180" />
      <Controls>
        <EditBox name="$(parent)Box"
            inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText" />
      </Controls>
    </Backdrop>

    <!-- rows --------------------------------------------------------- -->
    <Button name="WritWorthyInventoryListRow"
      virtual="true">
      <Dimensions y="20" />
      <Anchor point="RIGHT"
        relativeTo="$(parent)"
        />
      <Controls>
        <Button name="$(parent)Mimic"
          alpha="1"
          inherits="ZO_CheckButton"
          >
          <Dimensions x="16" y="16" />
          <TextureCoords
            left="0.0"  top="0.0"
            right="1.0" bottom="1.0"
            />
        </Button>

        <Button name="$(parent)Enqueue"
          alpha="1"
          inherits="ZO_CheckButton"
          >
          <Dimensions x="16" y="16" />
          <TextureCoords
            left="0.0"  top="0.0"
            right="1.0" bottom="1.0"
            />
        </Button>

        <Texture name="$(parent)EnqueueMask"
          color="000000"
          layer="OVERLAY"
          alpha="0.75"
          mouseEnabled="true"
          >
          <Dimensions x="20" y="20" />
          <Anchor relativeTo="$(parent)Enqueue"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="0"
            offsetY="0"
            />
        </Texture>

      </Controls>
    </Button>


    <!-- mat list window ------------------------------------------------ -->
    <TopLevelControl name="WritWorthyMatWindow"
      hidden="true"
      movable="true"
      mouseEnabled="true"
      resizeHandleSize="2"
      allowBringToTop="true"
      clampedToScreen="false"
      >
      <Dimensions              x="665"       y="550" />
      <DimensionConstraints minX="665"    minY="350"
                            maxX="1805"   maxY="950" />

            <!-- Positive LT/Negative RB offsets allow sliding
               past edge of screen. Negative LT/Positive RB
               offsets inset from edge of screen.
               Neither affect resize. Grr.
             -->
      <ClampedToScreenInsets left="-20" top="-20" right="20" bottom="20" />

      <!-- React to window move/resize -->
      <OnMoveStop>WritWorthy.MatUI.OnMoveStop()</OnMoveStop>
      <OnResizeStop>WritWorthy.MatUI.OnResizeStop()</OnResizeStop>

                        <!-- OnInitialized(this control)

                             Called EARLY during UI load, at add-on
                             initialization time. Try to do as little as
                             possible here, since the player might not even
                             open this window on this load.

                             REMOVE ME ok to remove once the debugging fink
                             WritWorthy.MatUI.OnInitialized(self) is gone.
                        -->
      <!-- <OnInitialized>WritWorthy.MatUI.OnInitialized(self)</OnInitialized> -->

      <Controls>
        <Backdrop name="$(parent)BG"
        inherits="ZO_DefaultBackdrop"
        />
        <Label
          text="WritWorthy Materials"
          font="ZoFontWindowTitle"
          color="CFDCBD"
          wrapMode="ELLIPSIS"
          verticalAlignment="TOP">
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="5"
            offsetY="5" />
        </Label>

        <Button name="$(parent)Close"
          alpha="1">
          <Textures
            normal="EsoUI/Art/Buttons/closeButton_up.dds"
            pressed="EsoUI/Art/Buttons/closeButton_down.dds"
            mouseOver="EsoUI/Art/Buttons/closeButton_mouseOver.dds"
            disabled="EsoUI/Art/Buttons/closeButton_disabled.dds"
            />
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPRIGHT"
            point="TOPRIGHT"
            offsetX="0"
            offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
            left="0"      top="0"
            right="0.625" bottom="0.625"
            />
          <OnClicked>
            WritWorthy.MatUI.ToggleUI()
          </OnClicked>
        </Button>

        <Button name="$(parent)Refresh"
          alpha="1">
          <Textures
            normal="EsoUI/Art/Help/help_tabicon_feedback_up.dds"
            pressed="EsoUI/Art/Help/help_tabicon_feedback_down.dds"
            mouseOver="EsoUI/Art/Help/help_tabicon_feedback_over.dds"
            disabled="EsoUI/Art/Help/help_tabicon_feedback_disabled.dds"
            />
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPRIGHT"
            point="TOPRIGHT"
            offsetX="-30"
            offsetY="0" />
          <Dimensions x="20" y="20" />
          <TextureCoords
            left="0.1"     top="0.1"
            right="0.9" bottom="0.9"
            />
          <OnClicked>
            WritWorthy.MatUI.RefreshUI()
          </OnClicked>
        </Button>

        <Control name = "$(parent)ComboBoxPlaceholder" >
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="5"
            offsetY="50" />
          <Dimensions
            x="500"
            y="32" />
        </Control>

                          <!-- WritWorthyMatUIListContainer -->
        <Control name="WritWorthyMatUIListContainer"
          inheritAlpha="true"
          >
          <Anchor relativeTo="$(parent)"
            relativePoint="TOPLEFT"
            point="TOPLEFT"
            offsetX="5"
            offsetY="85" />
          <Anchor relativeTo="$(parent)"
            relativePoint="BOTTOMRIGHT"
            point="BOTTOMRIGHT"
            offsetX="0"
            offsetY="-5" />
          <!-- Pointless to set dimensions when the two anchors
               completely and dynamically define our size
          <Dimensions x="990" y="700" />
          -->
          <Controls>
                                   <!-- WritWorthyMatUIListContainerHeaders -->
            <Control name="$(parent)Headers">
              <Anchor relativeTo="$(parent)"
                relativePoint="TOPLEFT"
                point="TOPLEFT" />
              <Anchor relativeTo="$(parent)"
                relativePoint="TOPRIGHT"
                point="TOPRIGHT" />
              <Dimensions y="20" />
              <Controls>
                <Control name="$(parent)Name"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPLEFT"
                    point="TOPLEFT"
                    offsetX="0" />
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-455" />
                  <Dimensions x="200" y="20" />
                  <OnInitialized>
                    WritWorthy.MatUI.HeaderInit(self, "Name", "Name", "ui_name")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)RequiredCt"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-375" />
                  <Dimensions x="75" y="20" />
                  <OnInitialized>
                    WritWorthy.MatUI.HeaderInit(self, "RequiredCt", "Req'd", "ui_required_ct")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)HaveCt"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-295" />
                  <Dimensions x="75" y="20" />
                  <OnInitialized>
                    WritWorthy.MatUI.HeaderInit(self, "HaveCt", "Have", "ui_have_ct")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)BuyCt"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-225" />
                  <Dimensions x="75" y="20" />
                  <OnInitialized>
                    WritWorthy.MatUI.HeaderInit(self, "BuyCt", "Buy", "ui_buy_ct")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)PriceEa"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-135" />
                  <Dimensions x="75" y="20" />
                  <OnInitialized>
                    WritWorthy.MatUI.HeaderInit(self, "PriceEa", "Price", "ui_price_ea")
                  </OnInitialized>
                </Control>
                <Control name="$(parent)BuySubtotal"
                  inherits="ZO_SortHeader"
                  >
                  <Anchor relativeTo="$(parent)"
                    relativePoint="TOPRIGHT"
                    point="TOPRIGHT"
                    offsetX="-20" />
                  <Dimensions x="120" y="20" />
                  <OnInitialized>
                    WritWorthy.MatUI.HeaderInit(self, "BuySubtotal", "Subtotal", "ui_buy_subtotal")
                  </OnInitialized>
                </Control>
              </Controls>
            </Control>                                  <!-- MatListHeaders -->

                                                        <!-- MatList itself -->
            <Control name="$(parent)List"
              inherits="ZO_ScrollList">
              <Anchor point="TOPLEFT"
                relativeTo="$(parent)Headers"
                relativePoint="BOTTOMLEFT"
                offsetY="10"
                />
              <Anchor point="BOTTOMRIGHT"
                relativeTo="$(parent)"
                relativePoint="BOTTOMRIGHT"
                />
            </Control>
          </Controls>
        </Control>

      </Controls>
    </TopLevelControl>

    <!-- mat list rows - built by code, not xml ----------------------- -->
    <Button name="WritWorthyMatUIRow"
      virtual="true">
      <Dimensions y="20" />
      <Anchor point="RIGHT"
        relativeTo="$(parent)"
        />
      <Controls>
      </Controls>
    </Button>
  </Controls>
</GuiXml>
